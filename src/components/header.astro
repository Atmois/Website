---
import Navigation from "./navigation.astro";
import "../styles/main.css";
---

<header>
  <nav>
    <div class="flex items-center gap-3 pb-2">
        <img
          src="/images/avatar.webp"
          class="w-20 rounded-full border-none inline-flex aspect-square overflow-hidden rounded-full"
          width="50"
          height="50"
          loading="lazy"
          decoding="async"
        />
      </a>
      <div class="flex flex-col">
        <h1 class="headerText">Atmois</h1>
        <p class="subText">Life's just a rolling movie and we're all waiting for the credits.</p>
        <div class="flex flex-row items-center gap-x-2 pt-1" aria-label="pride-flag">
            <img
              src="/images/pride.png"
              class="h-6 w-6"
              alt="Pride flag"
              width="50"
              height="50"
              loading="lazy"
              decoding="async"
            />
          </a>
        </div>
      </div>
    </div>

    <Navigation />
  </nav>
